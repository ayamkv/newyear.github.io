{
  "background": {
    "position": "50% 50%",
    "repeat": "no-repeat",
    "size": "20%"
  },
  "fullScreen": {
    "enable": true,
    "zIndex": -1
  },
  "interactivity": {
    "detectsOn": "window",
    "events": {
      "onClick": {
        "enable": false,
        "mode": "bubble"
      },
      "onDiv": {
        "selectors": [],
        "enable": false,
        "mode": [],
        "type": "circle"
      },
      "onHover": {
        "enable": true,
        "mode": "connect",
        "parallax": {
          "enable": true,
          "force": 10,
          "smooth": 250
        }
      }
    },
    "modes": {
      "connect": {
        "distance": 100,
        "links": {
          "opacity": 0.2
        },
        "radius": 80
      },
      "grab": {
        "distance": 400
      },
      "repulse": {
        "distance": 400
      }
    }
  },
  "particles": {
    "color": {
      "value": "#000"
    },
    "links": {
      "color": {
        "value": "#000"
      },
      "distance": 150,
      "opacity": 0.4
    },
    "move": {
      "attract": {
        "rotate": {
          "x": 600,
          "y": 600
        }
      },
      "enable": true,
      "path": {},
      "outModes": {
        "bottom": "out",
        "left": "out",
        "right": "out",
        "top": "out"
      },
      "random": true,
      "speed": 1
    },
    "number": {
      "density": {
        "enable": true
      },
      "value": 160
    },
    "opacity": {
      "random": {
        "enable": true,
        "minimumValue": 0.3
      },
      "value": {
        "min": 0.4,
        "max": 0.2
      },
      "animation": {
        "enable": true,
        "speed": 1
      }
    },
    "size": {
      "random": {
        "enable": true
      },
      "value": {
        "min": 1,
        "max": 3
      },
      "animation": {
        "speed": 4,
        "minimumValue": 0.3
      }
      
    }
  }
}